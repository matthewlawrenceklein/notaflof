
<div class="centering_div">
    <div class="show_info">
        <h1>Recent Shows</h1>
        <div>
            <%= button_to 'Add Show', new_show_path, method: :get %>
        </div>
        <% @shows.each do |show| %>
            <div>
                <ul>
                    <li>
                        <%= link_to "#{show.date} -- #{show.venue.name} -- #{show.artist.name}, #{show.artist2}, #{show.artist3}...", show_path(show)  %>
                    </li>
                </ul>
            </div>
        <% end %>
    </div>
</div>